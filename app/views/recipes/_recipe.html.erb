<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 120) %>
      </section>
    </div>
    
    <div class="col-md-8 well">
      <h4><%= link_to recipe.name, recipe %></h4>
      <p><%= simple_format(truncate(recipe.description, length: 150)) %></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span>
      </p>
      
      <% if logged_in? && recipe.chef == current_chef %>
        <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning" %>
        <%= link_to "Delete this recipe", 
          recipe_path(recipe), 
          method: :delete, 
          data: { confirm: "Are you sure you want to delete the '#{recipe.name}' recipe?"},
          class: "btn btn-xs btn-danger" %>
      <% end %>
    </div>
    
  </div>
<% end %>