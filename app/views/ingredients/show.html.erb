<%= render "shared/page_title", title: "#{@ingredient.name}" %>

<% if @ingredient.recipes.count > 0 %>
  <h4 align="center"><%= @ingredient.name %> is in these recipes</h4>
  
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
  
  <%= render "recipes/recipe", obj: @ingredient_recipes %>
  
  <div align="center">
    <%= will_paginate @ingredient_recipes %>
  </div>
<% else %>
  <h4 align="center"><%= @ingredient.name %> has no recipes yet</h4>
<% end %>
