<%= render "shared/page_title", title: "#{@chef.chefname}'s Profile" %>

<% if @chef.admin? %>
  <h4 align="center" style="color: red; background: pink">Administrator</h4>
<% end %>

<div class="row">
  <div class="col-md-offset-4 col-md-4 center">
    <%= gravatar_for @chef, size: 150  %>
  </div>
</div>

<% if @chef.recipes.count > 0 %>
  <h4 align="center"><%= @chef.chefname %>'s recipes</h4>
  
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
  
  <%= render "recipes/recipe", obj: @chef_recipes %>
  
  <div align="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %>
  <h4 align="center"><%= @chef.chefname %> has no recipes yet</h4>
<% end %>
